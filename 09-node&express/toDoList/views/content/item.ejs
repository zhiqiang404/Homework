<% if(item.isFinished){ %>
<li class="list-group-item">
    <h5 class="finish"><%= item.content %></h5>
    <div class="btn-group pull-right">
        <!-- //分成三个表单才有3个不同的action -->
        <!-- 表单：完成、新建、删除 -->
        <form action="/finish" method="POST" class="btn-group ">
            <button class="btn btn-success glyphicon glyphicon-ok" type="submit"></button>
            <input style="display: none" type="text" name="finishText" value="<%=item._id%>" />
        </form>
        <!-- 编辑 -->
        <div class="btn-group ">
            <button data-id="<%=item._id%>" class="edit btn btn-default glyphicon glyphicon-edit" data-toggle="modal" data-target="#myModal"></button>
        </div>
        <form action="/delete" method="POST" class="btn-group">
            <button class="btn btn-default glyphicon glyphicon-trash"></button>
            <input style="display: none" type="text" name="deleteText" value="<%=item._id%>" />
        </form>
    </div>
</li>

<%}else{%>
<!-- false进入 -->
<li class="list-group-item">
    <h5 class="unFinish">
        <%= item.content %></h5>
    <div class="btn-group pull-right">
        <form action="/finish" method="POST" class="btn-group ">
            <button class="btn btn-danger glyphicon glyphicon-ok"></button>
            <input style="display: none" type="text" name="finishText" value="<%=item._id%>" />
        </form>

        <!-- 编辑；因为id唯一，使用class -->
        <div class="btn-group ">
            <button data-id="<%=item._id%>" type='button' class="edit btn btn-default glyphicon glyphicon-edit" data-toggle="modal" data-target="#myModal">

            </button>
        </div>

        <form action="/delete" method="POST" class="btn-group">
            <button class="btn btn-default glyphicon glyphicon-trash"></button>
            <input style="display: none" type="text" name="deleteText" value="<%=item._id%>" />
        </form>
    </div>
</li>


<%}%>